<Window x:Class="MVVM2.View.SignInWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MVVM2.View" 
        xmlns:vm="clr-namespace:MVVM2.ViewModel"
        mc:Ignorable="d"
        Title="SignInWindow" Height="450" Width="800"
        >
    <Grid>
        <Button Content="SignIn" HorizontalAlignment="Center" Margin="0,274,0,0" VerticalAlignment="Top" Height="67" Width="204" Click="Button_Click"/>
        <TextBox x:Name="Login" HorizontalAlignment="Left" Height="68" Margin="112,111,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="238"/>
        <Label x:Name="LoginLabel" Content="Login" HorizontalAlignment="Left" Height="32" Margin="112,74,0,0" VerticalAlignment="Top" Width="144"/>
        <Label x:Name="PasswordLabel" Content="Password" HorizontalAlignment="Left" Height="32" Margin="455,74,0,0" VerticalAlignment="Top" Width="144"/>
        <PasswordBox x:Name="Password" HorizontalAlignment="Left" Height="70" Margin="455,110,0,0" VerticalAlignment="Top" Width="219"/>

    </Grid>
</Window>
